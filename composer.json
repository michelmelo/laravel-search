{
    "name": "michelmelo/laravel-search",
    "description": "Laravel package for full-text search over Eloquent models based on ZendSearch.",
    "keywords": ["laravel", "zendsearch", "eloquent", "search", "fulltext"],
    "license": "MIT",
    "authors": [
        {
            "name": "Michel Melo",
            "email": "eu@michelmelo.pt"
        }
    ],
    "require": {
        "php": ">=7.0",
        "illuminate/support": "5.5.* || 5.6.* || 5.7.* || 5.8.* || 6.*.* || 7.*.*",
        "nqxcode/zendsearch": "2.*",
        "nqxcode/lucene-stemmer-en-ru": "1.*"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2.11.0",
        "phpunit/phpunit": "^6.0",
        "mockery/mockery": "0.9.*",
        "orchestra/testbench": "~3.5.0",
        "orchestra/database": "~3.5.0"
    },
    "autoload": {
        "files": [
            "src/MichelMelo/LaravelSearch/Support/helpers.php"
        ],
        "psr-4": {
            "MichelMelo\\LaravelSearch\\": "src/MichelMelo/LaravelSearch",
            "tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "MichelMelo\\LaravelSearch\\ServiceProvider"
            ]
        }
    },
    "minimum-stability": "stable"
}
